@model Vjezba.Web.Models.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@400;600&display=swap" rel="stylesheet">
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

<div class="d-flex justify-content-center align-items-center min-vh-100 bg-light">
    <div class="login-card shadow-lg p-4">
        <div class="text-center mb-4">
            <h2 class="text-purple fw-bold">@ViewData["Title"]</h2>
            <p class="text-muted">Join the Team Allice Volleyball community! 💜</p>
        </div>

        <form asp-action="Register" method="post">
            <div class="form-row">
                <label asp-for="FullName" class="form-label text-purple"></label>
                <input asp-for="FullName" class="form-input" placeholder="Your full name" />
                <span asp-validation-for="FullName" class="form-error text-danger small"></span>
            </div>

            <div class="form-row">
                <label asp-for="Email" class="form-label text-purple"></label>
                <input asp-for="Email" class="form-input" placeholder="example@email.com" />
                <span asp-validation-for="Email" class="form-error text-danger small"></span>
            </div>

            <div class="form-row">
                <label asp-for="Password" class="form-label text-purple"></label>
                <input asp-for="Password" class="form-input" type="password" placeholder="Create a password" />
                <span asp-validation-for="Password" class="form-error text-danger small"></span>
            </div>

            <div class="form-row">
                <label asp-for="ConfirmPassword" class="form-label text-purple"></label>
                <input asp-for="ConfirmPassword" class="form-input" type="password" placeholder="Repeat your password" />
                <span asp-validation-for="ConfirmPassword" class="form-error text-danger small"></span>
            </div>

            <button type="submit" class="btn-purple w-100 mt-3">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
